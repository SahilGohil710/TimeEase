@model LoginTest.Models.SignUpModel
@{
    ViewBag.Title = "Know Your Customer (KYC) Form";
    Layout = null;
}
<link href="~/Content/AdminLTE/plugins/select2/css/select2.css" rel="stylesheet" />
<link href="~/Content/AdminLTE/plugins/select2-bootstrap4-theme/select2-bootstrap4.css" rel="stylesheet" />
<script src="~/Content/AdminLTE/plugins/jquery/jquery.min.js"></script>
<script src="~/Content/AdminLTE/plugins/select2/js/select2.min.js"></script>
<link href="~/Content/AdminLTE/plugins/select2/css/select2.min.css" rel="stylesheet" />
<script src="~/Content/alertify.min.js"></script>
<link href="~/Content/AdminLTE/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
<link href="~/Content/alertify.min.css" rel="stylesheet" />
<link href="~/Content/Login.css" rel="stylesheet" />
@*<link href="~/Content/SignUp.css" rel="stylesheet" />*@
<link href="~/Content/loader.css" rel="stylesheet" />
<link href="~/Content/Layout.css" rel="stylesheet" />

<html>
<body>
    <div class="container">
        <div class="heading">Sign-Up</div>
        @using (Html.BeginForm("SignUp", "Home", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
        {

            <div class="loader-overlay">
                <div class="loader"></div>
            </div>

            <div class="form-grid">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.FullName, "Full Name", htmlAttributes: new { @class = "control-label req" })
                            @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "input", @maxlength = "100", @placeholder = "Full Name", @tabindex = "1", @oninput = "convertToUpperCase(this); validateName(this);" } })
                            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4" style="margin-top: 0.25rem;">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, "Email-ID", htmlAttributes: new { @class = "control-label req" })
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "input", @maxlength = "100", @placeholder = "Email-ID", @tabindex = "3", onblur = "checkEmailDuplication(this)", data_prev_value = ""} }) @*, @oninput = "validateEmail(this)"*@ 
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            <span id="emailValidationMessage" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4" style="margin-top: 0.25rem;">
                        <div class="form-group">
                            @Html.LabelFor(model => model.PhoneNo, "Phone Number", htmlAttributes: new { @class = "control-label req" })
                            @Html.EditorFor(model => model.PhoneNo, new { htmlAttributes = new { @class = "input", @placeholder = "Phone Number", @tabindex = "2", onblur = "checkPhoneNoDuplication(this)", data_prev_value = "", @oninput = "validatePhoneNo(this)" } })
                            @Html.ValidationMessageFor(model => model.PhoneNo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group" style="position: relative;">
                        @Html.LabelFor(model => model.Password, "Password", htmlAttributes: new { @class = "control-label req" })
                        <div style="position: relative;">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "input", @maxlength = "30", @placeholder = "Enter Password", @tabindex = "4", @id = "Password", @type = "password" } })
                            <button type="button" id="toggle-password" class="toggle-password" aria-label="Show Password">
                                <i class="fa fa-eye"></i>
                            </button>
                        </div>
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", @id = "password-error", @style = "margin-top: 5px; position: absolute;" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <input type="button" class="login-button col-md-4" value="Back to List" onclick="confirmNavigation()">
                    </div>
                </div>
            </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <input class="login-button col-md-4" id="saveAndContinue" type="submit" value="Submit">
                        </div>
                    </div>
                </div>
        }
    </div>

    <script src="~/AllJs/SignUp.js"></script>
</body>
</html>

