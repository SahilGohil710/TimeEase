@model LoginTest.Models.SignUpModel
@{
    ViewBag.Title = "AmeeShree Jewels";
    Layout = null;
}
<link href="~/Content/AdminLTE/plugins/select2/css/select2.css" rel="stylesheet" />
<link href="~/Content/AdminLTE/plugins/select2-bootstrap4-theme/select2-bootstrap4.css" rel="stylesheet" />
<script src="~/Content/AdminLTE/plugins/jquery/jquery.min.js"></script>
<script src="~/Content/AdminLTE/plugins/select2/js/select2.min.js"></script>
<link href="~/Content/AdminLTE/plugins/select2/css/select2.min.css" rel="stylesheet" />
<script src="~/Content/alertify.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
<link href="~/Content/alertify.min.css" rel="stylesheet" />
<link href="~/Content/Login.css" rel="stylesheet" />
<link href="~/Content/SignUp.css" rel="stylesheet" />
<link href="~/Content/loader.css" rel="stylesheet" />


<html>
<body>
    <style>
        .checkmark {
            margin-left: 10px;
            color: green;
            font-size: 14px;
        }

        /* Tab Styles */
        #tab-list {
            display: flex;
            list-style: none;
            padding: 0;
            margin: 0;
            border-bottom: 2px solid #ccc;
        }

        .tab {
            padding: 10px 20px;
            cursor: pointer;
            background: #f1f1f1;
            border: 1px solid #ccc;
            border-bottom: none;
            margin-right: 5px;
        }

            .tab.active {
                background: white;
                font-weight: bold;
                border-top: 2px solid #007bff;
                color: #007bff;
            }

        .tab-content {
            display: none;
            padding: 20px;
            border: 1px solid #ccc;
        }

            .tab-content.active {
                display: block;
            }

        .email-container {
            position: relative;
        }

        .email-info-icon {
            position: absolute;
            top: 50%;
            right: 10px;
            font-size: 18px;
            color: #007bff;
            cursor: pointer;
        }

        .email-info-message {
            position: absolute;
            top: 100%;
            left: 0;
            font-size: 12px;
            color: #555;
            display: none;
            background-color: #f9f9f9;
            border: 1px solid #ccc;
            padding: 5px;
            width: max-content;
            z-index: 10;
        }

        .email-info-icon:hover + .email-info-message {
            display: block;
        }

        .save-emp-button {
            margin-top: 10px;
            background-color: #007bff;
            color: white;
            padding: 10px 15px;
            border: none;
            cursor: pointer;
        }

            .save-emp-button:hover {
                background-color: #0056b3;
            }
    </style>

    <div class="container">
        <div class="heading">Add Employee</div>
        @using (Html.BeginForm("AddEmp", "Home", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data" }))
        {

            <div class="loader-overlay">
                <div class="loader"></div>
            </div>

            <div class="container">
                <div id="employee-tabs">
                    <ul id="tab-list">
                        <li class="tab active" data-tab="tab_1">Employee 1</li>
                    </ul>
                </div>
                <div id="tab-content">
                    <div class="tab-content active" id="tab_1">
                        <div class="form-grid employee-container">
                            <div class="form-group">
                                <label for="fullname_1" class="req">Full Name</label>
                                <input type="text" name="fullname[]" id="fullname_1" maxlength="200" class="form-control input" placeholder="Full Name" oninput="convertToUpperCase(this); validateName(this);" required>
                            </div>
                            <div class="form-group">
                                <label for="phone_1" class="req">Phone Number</label>
                                <input type="text" name="phone[]" id="phone_1" maxlength="10" class="form-control input" oninput="validatePhoneInput(event)" placeholder="Phone Number" required>
                            </div>
                            <div class="form-group">
                                <label for="email_1" class="req">Email</label>
                                <div class="email-container">
                                    <input type="email" name="email[]" id="email_1" maxlength="100" class="form-control input" placeholder="Email" onblur="checkEmailDuplication(1)" data-prev-value="" required>
                                    <span class="email-info-icon" id="email-info-icon">
                                        <i class="fas fa-info-circle"></i>
                                    </span>
                                    <span class="email-info-message" id="email-info-message">
                                        Enter a valid email to receive your auto-generated password.
                                    </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="designation_1" class="req">Designation</label>
                                <input type="text" name="designation[]" id="designation_1" maxlength="100" class="form-control input" placeholder="Designation" required>
                            </div>
                            <div class="form-group">
                                <label for="personalPhoto_1" class="req">Personal Photo</label>
                                <input type="file" name="personalPhoto_1[]" id="photo_1" class="form-control input" accept="image/*,application/pdf" required>
                            </div>
                            <div class="form-group">
                                <label for="aadharCard_1" class="req">Aadhar Card</label>
                                <input type="file" name="aadharCard_1[]" id="aadhar_1" class="form-control input" accept="image/*,application/pdf" required>
                            </div>
                            <div class="form-group">
                                <label for="panCard_1" class="req">PAN Card</label>
                                <input type="file" name="panCard_1[]" id="pan_1" class="form-control input" accept="image/*,application/pdf" required>
                            </div>
                            <div class="form-group">
                                <label for="salarySlip_1" class="req">Salary Slip</label>
                                <input type="file" name="salarySlip_1[]" id="salarySlip_1" class="form-control input" accept="image/*,application/pdf" required>
                            </div>
                            <!-- Save button for this employee -->
                            <button type="button" class="save-emp-button" id="save-emp-1" onclick="saveEmployee(1)">Save Employee</button>
                        </div>
                    </div>
                </div>
                <button id="add-employee" type="button" disabled>Add Employee</button>
            </div>
            <input class="login-button" id="login-button" type="button" value="Back to Login">
        }
    </div>
    <script src="~/AllJs/AddEmp.js"></script>
</body>
</html>